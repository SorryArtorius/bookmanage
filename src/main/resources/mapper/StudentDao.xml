<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.j16.dao.StudentDao">
    <resultMap id="studentMapper" type="student">
        <association property="grade" column="gradeId" select="com.j16.dao.GradeDao.getGrade"/>
    </resultMap>

    <select id="selectStudents" resultMap="studentMapper">
        select *
        from student
    </select>

    <delete id="deleteStudent" parameterType="int">
        delete from student
        <where>
            studentNo = #{studentNo}
        </where>
    </delete>

    <delete id="deleteStudents" parameterType="list">
        delete from student
        <where>
            studentNo in
            <foreach collection="list" item="item" index="index" open="(" separator="," close=")">
                #{item}
            </foreach>
        </where>
    </delete>

    <select id="fuzzyQueryStudent" resultMap="studentMapper" parameterType="map">
        select * from student
        <where>
            <if test="gradeId != 0">
                gradeId=#{gradeId}
            </if>
            <if test="studentName != ''">
                and studentName like concat('%',#{studentName},'%')
            </if>
        </where>
    </select>

    <select id="selectEditStudent" parameterType="int" resultMap="studentMapper">
        select * from student
        <where>
            studentNo =#{studentNo}
        </where>
    </select>

    <update id="updateStudent" parameterType="student">
        update student
        <set>
            studentName=#{studentName},loginPwd=#{loginPwd},
            sex=#{sex},gradeId=#{grade.gradeId},phone=#{phone},address=#{address},
            bornDate=#{bornDate},email=#{email},identityCard=#{identityCard}
        </set>
        <where>
            studentNo=#{studentNo}
        </where>
    </update>
</mapper>